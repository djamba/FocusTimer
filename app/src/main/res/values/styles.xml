<resources>

	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimary</item>

		<item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>

		<item name="colorButtonNormal">@color/colorPrimary</item>
		<item name="android:buttonStyle">@style/ButtonColorStyle</item>

	</style>

	<style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">

		<item name="colorAccent">@color/colorPrimary</item>
		<item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>

		<item name="colorControlNormal">@color/colorPrimary</item>
		<item name="colorControlActivated">@color/colorPrimary</item>

		<item name="colorButtonNormal">@color/colorPrimary</item>
		<item name="android:buttonStyle">@style/ButtonColorStyle</item>

	</style>

	<style name="BottomSheetModalStyle"	parent="Widget.MaterialComponents.BottomSheet.Modal">
		<item name="android:background">@drawable/rounded_dialog</item>
	</style>

	<style name="ButtonColorStyle" parent="Widget.MaterialComponents.Button">
		<item name="android:textColor">@color/colorControlText</item>
	</style>

</resources>
