<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="viewModel"
			type="ru.ischenko.roman.focustimer.ui.main.FocusTimerViewModel"/>
	</data>

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/goal_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:text="Укажите цель помидора"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			tools:text="Укажите цель помидора"/>

		<EditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@={viewModel.goal}"
			android:inputType="text"
			android:hint="Введите что вы будуте делать"
			app:layout_constraintTop_toBottomOf="@id/goal_label"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

	</android.support.constraint.ConstraintLayout>

</layout>