<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="viewModel"
			type="ru.ischenko.roman.focustimer.ui.main.FocusTimerViewModel"/>
	</data>

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

		<TextView
			android:id="@+id/goal_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="32dp"
			android:textSize="16sp"
			android:textColor="@color/colorPrimaryDark"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			tools:text="Укажите цель помидора"/>

		<EditText
			android:id="@+id/goal_text"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="@={viewModel.goal}"
			android:inputType="textMultiLine"
			android:hint="@string/focus_timer_goal_hint"
			app:layout_constraintTop_toBottomOf="@id/goal_label"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

		<Button
			android:id="@+id/start_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/focus_timer_ok_button"
			app:layout_constraintTop_toBottomOf="@+id/goal_text"
			app:layout_constraintRight_toRightOf="parent"/>

		<Space
			android:layout_width="match_parent"
			android:layout_height="360dp"
			app:layout_constraintTop_toBottomOf="@+id/start_button"/>

	</android.support.constraint.ConstraintLayout>

</layout>